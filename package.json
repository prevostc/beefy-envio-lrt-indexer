{
  "name": "envio-indexer",
  "version": "0.1.0",
  "scripts": {
    "clean": "tsc --clean",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "codegen": "envio codegen",
    "dev": "envio dev",
    "start": "envio start",
    "stop": "envio stop",
    "deploy": "git checkout prod && git merge origin/main --ff-only && git push && git checkout -",
    "format": "biome check --write --unsafe",
    "format:safe": "biome check --write",
    "db:console": "PGPASSWORD=testing psql -h localhost -p 5433 -U postgres -d envio-dev",
    "test": "pnpm run test:lint && pnpm run test:ts",
    "test:lint": "biome ci",
    "test:ts": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/node": "24.9.2",
    "lefthook": "1.13.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "blockchain-addressbook": "0.54.93",
    "envio": "2.31.1",
    "remeda": "^2.32.0",
    "viem": "2.37.9"
  },
  "optionalDependencies": {
    "generated": "./generated"
  },
  "engines": {
    "node": ">=24.11.0 <25.0.0"
  }
}
