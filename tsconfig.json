{
  "compilerOptions": {
    "target": "es2022", //required for use with BigInt types
    "lib": ["es2022"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS"
  },
  "include": ["src", "test"]
}
